# 数据库配置
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USERNAME=root
DATABASE_PASSWORD=your_password_here
DATABASE_NAME=rescue_node_db

# 兼容旧版本的数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=your_password_here
DB_DATABASE=nodeMysql

# 应用配置
PORT=3000
APP_PORT=3000
NODE_ENV=development

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=30d

# 密码加密配置
BCRYPT_SALT_ROUNDS=10

# 限流配置
THROTTLE_TTL=60000
THROTTLE_LIMIT=10

# 短信服务配置（阿里云SMS）
SMS_ACCESS_KEY_ID=your-aliyun-access-key-id
SMS_ACCESS_KEY_SECRET=your-aliyun-access-key-secret
SMS_REGION=cn-hangzhou
SMS_SIGN_NAME=your-sms-sign-name
SMS_TEMPLATE_CODE=your-sms-template-code

# 生产环境配置
# 部署到 Vercel 时使用
VERCEL_URL=your-vercel-app-url.vercel.app

# 部署到 Railway 时使用
RAILWAY_STATIC_URL=your-railway-app-url.railway.app

# 部署到 Render 时使用
RENDER_EXTERNAL_URL=your-render-app-url.onrender.com

# 生产数据库配置（推荐使用云数据库）
# PlanetScale 配置示例
# DB_HOST=your-planetscale-host.psdb.cloud
# DB_USERNAME=your-planetscale-username
# DB_PASSWORD=your-planetscale-password
# DB_DATABASE=your-planetscale-database

# Railway MySQL 配置示例
# DB_HOST=containers-us-west-xxx.railway.app
# DB_PORT=6543
# DB_USERNAME=root
# DB_PASSWORD=your-railway-mysql-password
# DB_DATABASE=railway

# 安全配置
CORS_ORIGIN=http://localhost:3000,https://your-frontend-domain.com
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# 日志配置
LOG_LEVEL=info
LOG_FILE_ENABLED=true

# 监控配置（可选）
SENTRY_DSN=your-sentry-dsn-here
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key